<!--Create and alphabetize the list, create list suggestions, and add suggested items to list-------------------------------------------------->

<script>
    //--------------------------------------------------------------------------------------------------------
    //declared arrays 
    var listArray = [];
    var listArrayClose = [];

    //--------------------------------------------------------------------------------------------------------
    //variable food arrays
    var summerFoods = ["popsicles", "ice cream", "lemonade", "iced tea", "watermelon", "gelato"];
    var winterFoods = ["canned soup", "hot chocolate mix"];
    var christmasFoods = ["boxed stuffing", "cranberries", "canned gravy", "whipped cream", "wine", "candy canes", "paper plates"];
    var fridayFoods = ["beer", "wine"];
    var healthyFoods = ["broccoli", "cauliflower", "apples", "oranges", "pears", "romaine hearts", "celery"];

    //--------------------------------------------------------------------------------------------------------
    //randomize variable food arrays
    var randomSummerItem = summerFoods[Math.floor(Math.random()*summerFoods.length)];
    var randomWinterItem = winterFoods[Math.floor(Math.random()*winterFoods.length)];
    var randomChristmasItem = christmasFoods[Math.floor(Math.random()*christmasFoods.length)];
    var randomFridayItem = fridayFoods[Math.floor(Math.random()*fridayFoods.length)];
    var randomHealthyItem = healthyFoods[Math.floor(Math.random()*healthyFoods.length)];
    
    //--------------------------------------------------------------------------------------------------------
    //other global variables
    var randomItem; // used in determineRandomItem and addSeasonalFoods
    var xbutton = "<button id='xbutton' class='xbutton' onclick='removeListArrayElement()'>X</button>"; // close (X) button on list items  
    
    /*
            for (var i = 0; i < 20; i++)  {
            const item = document.createElement('button')
            item.value = i
            item.textContent = 'X'
            item.className = 'xbutton'
            list.appendChild(item)
        }
    */
    
    //--------------------------------------------------------------------------------------------------------
    //works fully - determine Random Item Category and add to page below input field
    function determineRandomItem() {
        var date = new Date();
        var d = date.getDate(); // day of month
        var mon = date.getMonth(); // January = 0, December = 11
        var wd = date.getDay(); // Sunday = 0, Saturday = 6 
          if (wd == 5) {
            randomItem = randomFridayItem;
            document.getElementById("addSuggestedItem").innerHTML = ("Its Friday! Add " + randomItem + " to your list?");
        } else if (mon == 11) {
            randomItem = randomChristmasItem;
            document.getElementById("addSuggestedItem").innerHTML = ("Christmas is coming! Add " + randomItem + " to your list?");
        } else if (mon == 0)  {
            randomItem = randomWinterItem;
            document.getElementById("addSuggestedItem").innerHTML = ("It's chilly out! Add " + randomItem + " to your list?");
        } else if (mon == 6)  {
            randomItem = randomSummerItem;
            document.getElementById("addSuggestedItem").innerHTML = ("Its a hot one! Add " + randomItem + " to your list?");
        } else  {
            randomItem = randomHealthyItem;
            document.getElementById("addSuggestedItem").innerHTML = ("Eat Healthier! Add " + randomItem + " to your list?");
        }
        
    }
    determineRandomItem(randomItem);
    

    //--------------------------------------------------------------------------------------------------------
    //works fully - try to condense with addSeasonalFoods
    function newList() {
        listArray.push(document.getElementById("input").value);
        listArrayClose.push("X")
        listArray.sort()
        console.log(listArray);
        console.log(listArrayClose);
    var i;
    var j = "";
    var k = listArray.length;
        for (i = 0; i < k; i++)  {
            j += "<span class=" + listArray[i] + ">" + listArray[i] + "<button id=" + 'xbutton' + [i] + " class='xbutton' onclick='removeListArrayElement()'>" + listArrayClose[i] + "</button>" + "</span>" + "<br>";
            document.getElementById("list").innerHTML = j;
            }
    }
  
  
    //--------------------------------------------------------------------------------------------------------
    //works fully - add seasonal foods from seasonal array to newList array - try to condense with newList
    function addSeasonalFoods() {
            listArray.push(randomItem);
            listArrayClose.push("X")
            listArray.sort()
            console.log(listArray);
            console.log(listArrayClose);
        var i;
        var j = "";
        var k = listArray.length;
        for (i = 0; i < k; i++)  {
            j += "<span class=" + listArray[i] + ">" + listArray[i] + "<button id=" + 'xbutton' + [i] + " class='xbutton' onclick='removeListArrayElement()'>" + listArrayClose[i] + "</button>" + "</span>" + "<br>";
            document.getElementById("list").innerHTML = j;
            }
    }
    
    //--------------------------------------------------------------------------------------------------------
    //under construction - add suggested items based on items inputed into array by user



    //--------------------------------------------------------------------------------------------------------
    //works fully - try to condense with hideAddSuggestedItem
    function hideButtonsDiv()  {
        var x = document.getElementById("buttons");
        if (x.style.display === "none") {
            x.style.display = "block";
        } else {
            x.style.display = "none";
        }
    }

    //--------------------------------------------------------------------------------------------------------
    //under construction - Remove listArray Items 
    function removeListArrayElement()  {

        var arrayNumber = document.getElementById("xbutton" + [i]); // no idea how to make this work. Find way to increment value of button and find way to call said button.
        //console.log(document.getElementById("xbutton").value)
        listArray.splice(arrayNumber , 1);
        listArrayClose.splice(arrayNumber , 1);
        console.log(listArray);
        console.log(listArrayClose); // console logs show array values disapearing, starting at 0
        var i;
        var j = "";
        var k = listArray.length;
        var l = listArrayClose.length;
        for (i = 0; i < k; i++)  
        j += "<span class=" + listArray[i] + ">" + listArray[i] + "<button id=" + 'xbutton' + [i] + " class='xbutton' onclick='removeListArrayElement()'>" + listArrayClose[i] + "</button>" + "</span>" + "<br>";
        //j += "<span class=" + listArray[i] + ">" + listArray[i] + "<button id='xbutton' class='xbutton' onclick='removeListArrayElement()'>" + listArrayClose[i] + "</button>" + "</span>" + "<br>";

        document.getElementById("list").innerHTML = j
    }

    //--------------------------------------------------------------------------------------------------------
    //works fully - try to condense with hideButtonsDiv
    function hideAddSuggestedItem()  {
        var x = document.getElementById("addSuggestedItem");
        if (x.style.display === "none") {
            x.style.display = "block";
        } else {
            x.style.display = "none";
        }
    }
</script>   


<!--Hit Enter instead of Click-------------------------------------------------->
<script>
    //works fully
    var input = document.getElementById("input");    
    input.addEventListener("keyup", function(event) {
        if (event.keyCode === 13)   {
            document.getElementById("button").click();
        }
    });
</script>


<!--Last Added Item Displayed-------------------------------------------------->
<script>
    //works fully
    function lastAdded()  {
        document.getElementById("lastAddedItem").innerHTML = ('The last item you entered was ' + document.getElementById("input").value);
    }


</script>


